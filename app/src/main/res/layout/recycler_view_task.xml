<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/vwItemSeparator_ListJob"
        android:background="#454761"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgViewIcon_ListJob"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtViewTitle_ListJob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtViewSubject_ListJob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtViewDate_ListJob"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="02/02/2022"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>

</LinearLayout>